<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.todo_list.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/all_side_shadow"
        android:padding="20dp">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:set="@{viewModel.periodStatistics}" />

        <View
            android:id="@+id/total_color"
            android:layout_width="9dp"
            android:layout_height="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="42dp"
            android:background="@color/blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pieChart" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="36dp"
            android:text="total"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/total_color"
            app:layout_constraintTop_toBottomOf="@id/pieChart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="36dp"
            android:text="@{Integer.toString(viewModel.periodStatistics.total)}"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/total"
            app:layout_constraintTop_toBottomOf="@+id/pieChart" />

        <View
            android:id="@+id/success_color"
            android:layout_width="9dp"
            android:layout_height="8dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="42dp"
            android:background="@color/green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pieChart" />

        <TextView
            android:id="@+id/success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="36dp"
            android:text="success"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/success_color"
            app:layout_constraintTop_toBottomOf="@id/pieChart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="36dp"
            android:text="@{Integer.toString(viewModel.periodStatistics.success)}"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/success"
            app:layout_constraintTop_toBottomOf="@+id/pieChart"
            tools:text="10" />

        <View
            android:id="@+id/fail_color"
            android:layout_width="9dp"
            android:layout_height="8dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="42dp"
            android:background="@color/red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pieChart" />

        <TextView
            android:id="@+id/fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="36dp"
            android:text="fail"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/fail_color"
            app:layout_constraintTop_toBottomOf="@id/pieChart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="36dp"
            android:text="@{Integer.toString(viewModel.periodStatistics.fail)}"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/fail"
            app:layout_constraintTop_toBottomOf="@+id/pieChart"
            tools:text="10" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
