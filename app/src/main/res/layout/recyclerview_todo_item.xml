<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <import type="com.example.todo_list.data.room.ScheduleEntity" />

        <variable
            name="todoEntity"
            type="com.example.todo_list.data.room.ScheduleEntity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/all_side_shadow"
        android:layout_marginHorizontal="5dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/recycler_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{todoEntity.title}"
            android:textColor="@color/black"
            android:textSize="15sp"
            tool:text="스케줄"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recycler_startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                app:date="@{todoEntity.start_date}"
                tool:text="2025-01-01"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/tilde" />

            <TextView
                android:id="@+id/recycler_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                app:date="@{todoEntity.end_date}"
                tool:text="2025-12-12"/>
        </LinearLayout>
    </LinearLayout>
</layout>
